# Railway PostgreSQL Database URL
# This will be automatically provided by Railway when you provision a PostgreSQL database
DATABASE_URL=postgresql://user:password@host:port/database

# Server Port (Railway will provide this automatically as PORT)
PORT=3001

# Environment
NODE_ENV=production

# JWT Secret (for token generation)
JWT_SECRET=your-secret-key-here

# SMS Service Configuration (if needed)
TENCENT_SECRET_ID=your-tencent-secret-id
TENCENT_SECRET_KEY=your-tencent-secret-key
TENCENT_SMS_APP_ID=your-sms-app-id
TENCENT_SMS_SIGN_NAME=your-sms-sign-name
TENCENT_SMS_TEMPLATE_ID=your-template-id