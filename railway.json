{
  "$schema": "https://railway.app/railway.schema.json",
  "version": "2025-08-13-fixed-build",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm install && npm run build:client && cd admin && npm install && npm run build && cd ../server && npm install"
  },
  "deploy": {
    "startCommand": "cd server && node index-railway.js",
    "numReplicas": 1,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "healthcheckPath": "/api/health",
    "healthcheckTimeout": 30
  }
}