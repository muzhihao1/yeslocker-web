# Edge Functions Environment Variables
# Copy this file to .env.local for local development

# Supabase Configuration
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Environment Settings
ENVIRONMENT=development
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3002

# Security Configuration
JWT_SECRET=your-very-secure-jwt-secret-change-in-production
OTP_SALT=yeslocker-security-salt-change-in-production

# SMS Service Configuration (Tencent Cloud)
TENCENT_SECRET_ID=your-tencent-secret-id
TENCENT_SECRET_KEY=your-tencent-secret-key
TENCENT_SMS_APP_ID=your-sms-app-id
TENCENT_SMS_SIGN_NAME=your-sms-sign-name
TENCENT_SMS_TEMPLATE_ID=your-template-id

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=10
RATE_LIMIT_LOCKOUT_DURATION=300000

# Database Configuration
DB_CONNECTION_POOL_SIZE=20
DB_MAX_CONNECTIONS=100

# Logging and Monitoring
LOG_LEVEL=info
MONITORING_ENDPOINT=https://your-monitoring-service.com/api/logs

# CORS Configuration
CORS_ALLOWED_ORIGINS=*
CORS_ALLOWED_HEADERS=authorization,x-client-info,apikey,content-type
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS

# File Upload Configuration
MAX_FILE_SIZE=50MB
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# Feature Flags
ENABLE_SMS_VERIFICATION=true
ENABLE_RATE_LIMITING=true
ENABLE_AUDIT_LOGGING=true
ENABLE_SECURITY_HEADERS=true

# Admin Configuration
ADMIN_SESSION_DURATION=28800
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=1800

# User Configuration
USER_SESSION_DURATION=86400
OTP_EXPIRY_MINUTES=5
OTP_RESEND_COOLDOWN=60