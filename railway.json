{
  "$schema": "https://railway.app/railway.schema.json",
  "version": "2025-08-12",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm ci && npm run build:client && cd admin && npm ci && npm run build && cd ../server && npm ci"
  },
  "deploy": {
    "startCommand": "cd server && node index-railway.js",
    "numReplicas": 1,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}